<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
  <title>Upload Attendance</title>
  <link rel="icon" href="/images/favicon.png">
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="css/markAttendance.css">
  <script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>
  <script>
    if (window.history.replaceState) {
      window.history.replaceState(null, null, window.location.href);
    }
  </script>
</head>

<body>

  <div class="navbar">
    <h1 class="nameOfTeacher">Welcome <%= teacherName %>!</h1>
    <a class="tooltip" href="/teacherLogout"><span class="tooltiptext">Logout</span><img class="logout-btn" src="https://img.icons8.com/external-sbts2018-mixed-sbts2018/58/000000/external-logout-social-media-basic-1-sbts2018-mixed-sbts2018.png" /></a>
  </div>

  <div class="container">
    <h1 class="heading">Upload Attendance ScreenShot</h1>
    <box-icon class="back-btn" name="arrow-back" onclick="backToHomeTeacher()"></box-icon>

    <div class="error-alerts">
      <%- include('partials/errorMsgs') %>
    </div>
    <form class="upload-screenshot-form"  action="/uploadimages" method="post" enctype="multipart/form-data">
      <div class="form-components">
        <input class="hidden-input" type="hidden" name="branch" value="<%=branch%>">
        <div class="custom-select">
          <select>
            <option value="0"><%=branchValue%></option>
            <option value="1">CSE</option>
            <option value="2">CST</option>
            <option value="3">IT</option>
            <option value="4">ITE</option>
            <option value="5">ECE</option>
            <option value="6">EEE</option>
          </select>
        </div>
        <div class="bound-together">
          <label for="selectDate">Select Date:</label>
          <input type="date" class="selectDate" name="attendanceDate" value="<%=dateSelected%>" min="2023-01-01" max="<%=todaysDate%>" required>
        </div>
        <input type="hidden" name="teacherName" value="<%=teacherName%>">
      </div>
      <div class="upload-images-box">
        <ul>
          <li>Allowed file types are .jpg, .jpeg, .png</li>
        </ul>
        <div class="image-container">
          <div class="image-input">
            <label for="firstFile">Image: </label>
            <input id="firstFile" class="file" type="file" name="firstImage" accept="image/*" required>
          </div>
          <p class="sub-label first-sl">First Photo</p>
        </div>
      </div>
      <div class="btns">
        <button class="displayBtn" type="button" name="button">Upload</button>
        <button class="submitBtn" type="submit" name="button">Upload</button>
      </div>
    </form>
  </div>

  <script defer src="js/face-api.min.js" charset="utf-8"></script>
  <script defer src="js/uploadImages.js" charset="utf-8"></script>
  <script defer src="js/index.js" charset="utf-8"></script>

</body>

</html>
