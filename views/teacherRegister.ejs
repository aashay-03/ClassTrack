<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>
  <link rel="icon" href="/images/favicon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="css/teacherRegister.css">
  <script>
    if ( window.history.replaceState ) {
      window.history.replaceState( null, null, window.location.href );
    }
  </script>
</head>

<body>
  <h1 class="heading">Register</h1>
  <div class="register-box">
    <%- include('partials/errorMsgs') %>
    <form class="register-form" action="/teacherRegister" method="POST">
      <input type="text" name="teacherName" placeholder="Name" value="<%= typeof teacherName != 'undefined' ? teacherName : '' %>" required autofocus autocomplete="off" spellcheck="false">
      <input type="email" name="username" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>" required autocomplete="off" spellcheck="false">
      <div class="password-field">
        <input onkeyup="trigger()" class="pass" type="password" name="password" placeholder="Password" required autocomplete="off" spellcheck="false">
        <span class="showBtn"><img class="eye-image" src="images/eye.png" alt="SHOW"></span>
      </div>
      <input type="text" name="collegeCode" placeholder="College Code"  value="<%= typeof collegeCode != 'undefined' ? collegeCode : '' %>" required autocomplete="off" spellcheck="false">
      <button type="submit">Register</button>
      <div class="login-link">Already have an account? <a href="/teacherLogin">Log in</a></div>
    </form>
  </div>

  <script src="js/teacherSignupLogin.js" charset="utf-8"></script>
  <script src="js/index.js" charset="utf-8"></script>
</body>

</html>
